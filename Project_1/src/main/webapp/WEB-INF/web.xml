  <servlet>
  	<servlet-name>RejectServlet</servlet-name>
  	<servlet-class>com.servlets.RejectServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>ApproveServlet</servlet-name>
  	<servlet-class>com.servlets.ApproveServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>MultipleViewServlet</servlet-name>
  	<servlet-class>com.servlets.MultipleViewServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>CreateTicketServlet</servlet-name>
  	<url-pattern>/CreateTicketServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>PastTicketsServlet</servlet-name>
  	<url-pattern>/PastTicketsServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
