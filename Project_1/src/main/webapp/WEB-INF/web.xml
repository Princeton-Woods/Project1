  <servlet-mapping>
  	<servlet-name>RejectServlet</servlet-name>
  	<url-pattern>/RejectServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ApproveServlet</servlet-name>
  	<url-pattern>/ApproveServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>MultipleViewServlet</servlet-name>
  	<url-pattern>/MultipleViewServlet</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
 	<welcome-file>login.jsp</welcome-file>
 </welcome-file-list>
  
